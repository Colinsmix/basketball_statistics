<h3>{{id}}</h3>

<p>{{link-to 'Edit' 'games.edit' this}} <button {{action destroyRecord}}>Destroy</button></p>

<div class="small-6 large-6 columns">
  <h2> Home Team </h2>
  <h3>{{hteam.location}} {{hteam.name}} - <strong>{{hteamscore}}</score></h3>
</div>

<div class="small-6 large-6 columns">
  <h2> Away Team </h2>
  <h3>{{ateam.location}} {{ateam.name}} - <strong>{{ateamscore}}</score></h3>
</div>
<ul>
  {{#each statline in statlines}}
    <li>{{statline.player.firstname}} {{statline.player.lastname}} - {{statline.points}} Points</li>
  {{/each}}
</ul>
