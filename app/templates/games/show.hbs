<h3>{{id}}</h3>

<p>{{link-to 'Edit' 'games.edit' this}} <button {{action destroyRecord}}>Destroy</button></p>

<div class="small-6 large-6 columns">
  <h2> Home Team </h2>
  <h3>{{hteam.location}} {{hteam.name}} - <strong>{{hteamscore}}</score></h3>
  <ul>
    {{#each homeline in homelines}}
      <li>{{homeline.player.firstname}} {{homeline.player.lastname}} - {{homeline.points}} Points</li>
    {{/each}}
  </ul>
</div>

<div class="small-6 large-6 columns">
  <h2> Away Team </h2>
  <h3>{{ateam.location}} {{ateam.name}} - <strong>{{ateamscore}}</score></h3>
  <ul>
    {{#each awayline in awaylines}}
      <li>{{awayline.player.firstname}} {{awayline.player.lastname}} - {{awayline.points}} Points</li>
    {{/each}}
  </ul>
</div>
