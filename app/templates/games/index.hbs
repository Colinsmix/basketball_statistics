<p>{{link-to 'New game' 'games.new'}}</p>

<table>
  <tr>
    <th>id</th>
    <th>Hteam</th>
    <th>Ateam</th>
    <th>Hteam Score</th>
    <th>Ateam Score</th>
    <th>Winner</th>
  </tr>
  {{#each}}
    <tr>
      <td>{{link-to id 'games.show' this}}</td>
      <td>{{hteam_id}}</td>
      <td>{{ateam_id}}</td>
      <td>{{hteam_score}}</td>
      <td>{{ateam_score}}</td>
      <td>{{winner_id}}</td>
    </tr>
  {{/each}}
</table>
