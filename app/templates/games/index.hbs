<p>{{link-to 'New game' 'games.new'}}</p>
  <table>
    <tr>
      <th>id</th>
      <th>Hteam</th>
      <th>Ateam</th>
      <th>Hteam Score</th>
      <th>Ateam Score</th>
    </tr>
    {{#each}}
      <tr>
        <td>{{link-to id 'games.show' this}}</td>
        <td>{{#link-to 'team' hteam}} {{hteam.location}} {{hteam.name}}{{/link-to}}</td>
        <td>{{#link-to 'team' ateam}}{{ateam.location}} {{ateam.name}}{{/link-to}}</td>
        <td>{{hteamscore}}</td>
        <td>{{ateamscore}}</td>
      </tr>
    {{else}}
      No Games to Show!
    {{/each}}
  </table>

