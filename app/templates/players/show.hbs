<h3>{{firstname}} {{lastname}}</h3>

<p>{{link-to 'Edit' 'players.edit' this}} <button {{action destroyRecord}}>Destroy</button></p>

<ul>
  <li>Position: {{position}}</li>
  <li>Height: {{heightformat}}</li>
  <li>Weight: {{weight}}</li>
</ul>

<table>
    <tr>
      <th>Game</th>
      <th>Pts</th>
      <th>Reb</th>
      <th>Ast</th>
      <th>Stl</th>
      <th>TO</th>
      <th>PF</th>
    </tr>
    {{#each statline in statlines}}
      <tr>
        {{#equal team.id statline.game.ateam.id }}
          <td>{{#link-to  'games.show' statline.game}}@ {{statline.game.hteam.location}}{{/link-to}}</td>
        {{/equal}}
          <td>{{#link-to 'games.show' statline.game}}{{statline.game.ateam.location}}{{/link-to}}</td>
        <td>{{statline.points}}</td>
        <td>{{statline.rebounds}}</td>
        <td>{{statline.assists}}</td>
        <td>{{statline.steals}}</td>
        <td>{{statline.turnovers}}</td>
        <td>{{statline.fouls}}</td>
      </tr>
    {{else}}
      No Games to Show!
    {{/each}}
  </table>

{{bar-chart width=400 height=200 data=content}}

