<h3>Index</h3>

<p>{{link-to 'New statline' 'statlines.new'}}</p>

<table>
  <tr>
    <th>id</th>
    <th>Player</th>
    <th>Game</th>
    <th>Points</th>
  </tr>
  {{#each}}
    <tr>
      <td>{{link-to id 'statlines.show' this}}</td>
      <td>{{player.firstname}} {{player.lastname}}</td>
      <td>{{link-to game.id 'games.show' game}}</td>
      <td>{{points}}</td>
    </tr>
  {{/each}}
</table>
